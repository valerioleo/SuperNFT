{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,    
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true
